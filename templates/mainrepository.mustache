        </div>
        <div class="col-3">
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" name="chk_images"
                {{#chk_images}} checked="checked" {{/chk_images}}>
                <label class="form-check-label" for="theme_check">{{#str}}materials_types_images, local_repositoryciae{{/str}}</label>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" name="chk_audios"
                {{#chk_audios}} checked="checked" {{/chk_audios}}>
                <label class="form-check-label" for="theme_check">{{#str}}materials_types_audio_recording, local_repositoryciae{{/str}}</label>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" name="chk_songs"
                {{#chk_songs}} checked="checked" {{/chk_songs}}>
                <label class="form-check-label" for="theme_check">{{#str}}materials_types_songs, local_repositoryciae{{/str}}</label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" name="chk_texts"
                {{#chk_texts}} checked="checked" {{/chk_texts}}>
                <label class="form-check-label" for="theme_check">{{#str}}materials_types_texts, local_repositoryciae{{/str}}</label>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" name="chk_graphics"
                {{#chk_graphics}} checked="checked" {{/chk_graphics}}>
                <label class="form-check-label" for="theme_check">{{#str}}materials_types_graphic_organizer, local_repositoryciae{{/str}}</label>
            </div>
        </div>
    </div>
</div>
<br>
<div class="row text-right">
    <div class="col-5"></div>
    <div class="col-7">
        {{#str}}order_label, local_repositoryciae{{/str}} 
        <select class="custom-select" aria-label="select_order" id="select_order" name="select_order">
            <option value="">{{#str}}order_any, local_repositoryciae{{/str}}</option>
            <option value="1" {{#order_one}}selected{{/order_one}}>{{#str}}order_new, local_repositoryciae{{/str}}</option>
            <option value="2" {{#order_two}}selected{{/order_two}}>{{#str}}order_last, local_repositoryciae{{/str}}</option>
        </select>
    </div>
</div>
<div class="row">
    {{#materials}}
    <div class="card" style="width: 18rem; margin-left:3px;margin-bottom:3px;">
        <div class="row no-gutters">
            <div class="col-md-12 block-title">
                <h5 class="card-title">{{materialtype}}</h5>
            </div>    
            <div class="col-md-4">
                {{#imageurl}}
                    <img src="{{imageurl}}" alt="..." style="width: 100%;height: 15vw;object-fit: cover;">
                {{/imageurl}}
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <p class="card-text"><strong>{{grades}}</strong></p>
                    <p class="card-text">{{culturalcontent}}</p>
                    <p class="card-text">
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star" aria-hidden="true"></i>
                        <i class="fa fa-star-o" aria-hidden="true"></i>
                    </p>
                    <div class="btn-group" role="group">

                        
                        <a href="{{locallink}}materialrepository.php?id={{id}}" class="btn btn-primary">Ver</a>
                       </div>
                </div>
            </div>            
        </div>
    </div>
    {{/materials}}
</div>
<div class="col-12">
    <div class="row justify-content-md-right mb-4">
        <div class="col-6"><p><a href="https://kimeltun.edocere.com/local/staticpage/view.php?page=orientaciones_pedagogicas" target="_blank">{{#str}}Pedagogical_orientation, local_repositoryciae{{/str}}</a></p></div>
        <div class="input-group col-6">
            <input type="text" class="form-control" placeholder="{{#str}} search_placeholder, local_repositoryciae {{/str}}" aria-label="search" aria-describedby="btn-search" id="searchText" name="searchText" value="{{search}}">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="button" id="btn-search">{{#str}} search, local_repositoryciae {{/str}}</button>
            </div>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-8 mb-5">
            <p class="font-weight-bolder">{{#str}}search_title, local_repositoryciae{{/str}}</p>
            <p  class="text-muted">{{#str}}search_subtitle, local_repositoryciae{{/str}}</p>
        </div>
        <br>
        <div class="col-4 text-right">
            {{#str}}grades_label, local_repositoryciae{{/str}} 
            <select class="custom-select" aria-label="grades_select" id="grades_select">
                <option value="">{{#str}}grades_all, local_repositoryciae{{/str}}</option>
                <option value="1" {{#grades_one}}selected{{/grades_one}}>{{#str}}grades_first, local_repositoryciae{{/str}}</option>
                <option value="2" {{#grades_two}}selected{{/grades_two}}>{{#str}}grades_second, local_repositoryciae{{/str}}</option>
                <option value="3" {{#grades_three}}selected{{/grades_three}}>{{#str}}grades_third, local_repositoryciae{{/str}}</option>
                <option value="4" {{#grades_four}}selected{{/grades_four}}>{{#str}}grades_fourth, local_repositoryciae{{/str}}</option>
                <option value="5" {{#grades_five}}selected{{/grades_five}}>{{#str}}grades_fifth, local_repositoryciae{{/str}}</option>
                <option value="6" {{#grades_six}}selected{{/grades_six}}>{{#str}}grades_sixth, local_repositoryciae{{/str}}</option>
                <option value="7" {{#grades_seven}}selected{{/grades_seven}}>{{#str}}grades_seventh, local_repositoryciae{{/str}}</option>
                <option value="8" {{#grades_eight}}selected{{/grades_eight}}>{{#str}}grades_eighth, local_repositoryciae{{/str}}</option>
            </select>
        </div>
    </div>
    <div class="row" id="theme_check">
        <div class="col-3">
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" name="chk_cards" 
                {{#chk_cards}} checked="checked" {{/chk_cards}} >
                <label class="form-check-label" for="theme_check">{{#str}}materials_types_thematic_cards, local_repositoryciae{{/str}}</label>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" name="chk_guides"
                {{#chk_guides}} checked="checked" {{/chk_guides}} >
                <label class="form-check-label" for="theme_check">{{#str}}materials_types_learning_guides, local_repositoryciae{{/str}}</label>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" name="chk_books"
                {{#chk_books}} checked="checked" {{/chk_books}} >
                <label class="form-check-label" for="theme_check">{{#str}}materials_types_manuals_books, local_repositoryciae{{/str}}</label>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" name="chk_capsules"

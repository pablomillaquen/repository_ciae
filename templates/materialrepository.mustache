<div>
    <h3>{{culturalcontent}}</h3>
    <div class="row">
        <div class="col-6">
            <div class="card" style="width:100%; margin-left:3px;margin-bottom:3px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="{{imageurl}}" alt="..." style="width: 100%;height: 15vw;object-fit: cover;">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{name}}</h5>
                            <p class="card-text"><b>Tipo de material:</b> {{materialtype}}</p>
                            <p class="card-text"><b>Curso:</b> {{grades}}</p>
                            {{#axis}}
                                <p class="card-text"><b>Ejes:</b> {{axis}}</p>
                            {{/axis}}
                        </div>
                    </div>
                </div>
            </div>
            <br>
            {{#islink}}
                {{#ismaterial}}
                    <p><b>Editor:</b> {{editor}}</p>
                    <p><b>Colaboradores:</b></p>
                    <ul>
                        {{#colaborators}}
                            <li>{{firstname}} {{lastname}}</li>
                        {{/colaborators}}
                    </ul>
                {{/ismaterial}}
                {{^ismaterial}}
                    <p><b>Autor:</b> {{author}}</p>
                {{/ismaterial}}
            {{/islink}}    
            {{^islink}}
                <p><b>Autor:</b> {{author}}</p>
            {{/islink}}            
            </p>
        </div>
        <div class="col-6">
            <ul class="nav nav-tabs"  role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" href="#general" data-toggle="tab" role="tab">General</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#opinions" data-toggle="tab" role="tab">Opiniones</a>
                </li>
            </ul>

            <div class="tab-content">
                <br>
                <div class="tab-pane active" id="general" role="tabpanel">
                    <h5>Resumen</h5>
                    <br>
                    <p>{{abstract}}</p>
                    <br>
                    <hr>
                    {{#islink}}
                        {{#ismaterial}}
                            <a href="{{fileurl}}" type="button" class="btn btn-primary">Descargar material</a>
                            <a href="{{conversation_url}}" target="_blank" type="button" class="btn btn-primary">Ver conversación</a>
                        {{/ismaterial}}
                        {{^ismaterial}}
                            <a href="{{fileurl}}" type="button" class="btn btn-primary">Descargar material</a>
                            {{! <button type="button" class="btn btn-outline-primary">Proponer mejora</button> }}
                        {{/ismaterial}}                        
                    {{/islink}}
                    {{^islink}}
                        
                        <h5>Archivos disponibles</h5>
                        <table>
                            {{#fileurl}}
                            <tr>
                                <td>
                                    <a href="{{url}}" class="btn btn-primary">{{filename}}</a>
                                </td>
                            </tr>
                            {{/fileurl}}
                        </table>
                    {{/islink}}
                    <button class="btn btn-success" id="download">Descargar Ficha</button>
                    <br><br><br>
                    <h5>Sugerencias</h5>
                    <br>
                    <p>{{guidelines}}</p>
                    <br>
                </div>
                <div class="tab-pane" id="opinions" role="tabpanel">
                    <br>
                    {{#comments}}
                        <p>Autor: {{user}}</p>
                        <p><b>Comentario:</b> {{comment}}</p>
                    {{/comments}}
                    {{^comments}}
                        <p>Sin comentarios aún</p>
                    {{/comments}}
                    <br><hr>
                    <p><b>Agregar un nuevo comentario:</b></p>
                    <form name="form_comments">
                        <input name="user_id" type="hidden" value="{{user_id}}">
                        <textarea name="comment" rows="4" class="form-control"></textarea>
                        <div class="mt-3 text-right">
                            <button class="btn btn-primary">Guardar</button>
                        </div>
                        
                    </form>
                </div>
                
            </div>
        </div>
    </div>
</div>